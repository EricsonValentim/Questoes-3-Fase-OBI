# Lê a string e garante que está em maiúsculo
S = input().strip().upper()

# Verificação da restrição do tamanho
if len(S) < 1 or len(S) > 10**6:
    raise ValueError("O tamanho de S deve estar entre 1 e 10^6 caracteres.")

# Valores fixos das letras
valores = {
    'I': 1,
    'V': 5,
    'X': 10,
    'L': 50,
    'C': 100,
    'D': 500,
    'M': 1000
}

# Verificação se só existem caracteres válidos
for c in S:
    if c not in valores:
        raise ValueError("A string deve conter apenas I, V, X, L, C, D ou M.")

resultado = 0
i = 0

while i < len(S):
    valor_atual = valores[S[i]]
    modificado = valor_atual
    j = i + 1

    # Diminui sucessivamente o valor do próximo símbolo maior
    while j < len(S) and valores[S[j]] > valor_atual:
        modificado = valores[S[j]] - modificado
        j += 1

    resultado += modificado
    i = j

print(resultado)

